@page "/Notes"
@page "/Notes/{Id:int}" 
@using Sep3Blazor.Model
@using System.Globalization
@using Sep3Blazor.Data.NoteData
@namespace NotesComponent
@inject INoteService _noteService

<h1>Note Testing</h1>
<div class="row justify-content-between">
  <div class="col-sm-4">
    @if (NoteList == null)
    {
      Console.WriteLine("NoteList is empty/non-existing");
    }
    else
    {
      @foreach (Note note in NoteList)
      {
        if (note.week == currentWeek - 1)
        {
          <p>Week @currentWeek</p>
          <div>
            <table class="table-responsive">
              <thead>
              <tr>
                <th>Week</th>
                <th>Year</th>
                <th>Name</th>
                <th>Status</th>
                <th>Text</th>
              </tr>
              </thead>
              <tbody>
              <td>@note.week</td>
              <td>@note.year</td>
              <td>@note.name</td>
              <td>@note.status</td>
              <td>@note.text</td>
              </tbody>
            </table>
          </div>

        }
        else
        {
          <p>No notes this week. Please click here to create note</p>
          break;
        }
      }
    }
  </div>
  <div class="col-sm-4">
    @if (NoteList == null)
    {
      Console.WriteLine("NoteList is empty/non-existing");
    }
    else
    {
      @foreach (Note note in NoteList)
      {
        if (note.week == currentWeek)
        {
          <p>Week @currentWeek</p>
          <div>
            <table class="table-responsive">
              <thead>
              <tr>
                <th>Week</th>
                <th>Year</th>
                <th>Name</th>
                <th>Status</th>
                <th>Text</th>
              </tr>
              </thead>
              <tbody>
              <td>@note.week</td>
              <td>@note.year</td>
              <td>@note.name</td>
              <td>@note.status</td>
              <td>@note.text</td>
              </tbody>
            </table>
          </div>
          //else
          //{
          //  <p>No notes this week. Please click here to create note</p>

        }
      }
    }
  </div>
  <div class="col-sm-4">
    @if (NoteList == null)
    {
      Console.WriteLine("NoteList is empty/non-existing");
    }
    else
    {
      @foreach (Note note in NoteList)
      {
        if (note.week == currentWeek + 1)
        {
          <p>Week @currentWeek</p>
          <div>
            <table class="table-responsive">
